// These function are less accurate but fast.
float3 ApproxRgb2Srgb(float3 c)
{
	return pow(c, 1.0 / 2.2);
}

float3 ApproxSrgb2Rgb(float3 c)
{
	return pow(c, 2.2);
}

//----------------------------------------------------------------------------//
// These function are more accurate than the pow 2.2 approximation.
float3 AccurateRgb2Srgb(float3 c)
{
	float3 lo = c * 12.92;
	float3 hi = (pow(abs(c), 1.0 / 2.4) * 1.055) - 0.055;
	float3 result = (c <= 0.0031308) ? lo : hi;
	return result;
}

float3 AccurateSrgb2Rgb(float3 c)
{
	float3 lo = c / 12.92;
	float3 hi = pow((c + 0.055) / 1.055, 2.4);
	float3 result = (c <= 0.04045) ? lo : hi;
	return result;
}

